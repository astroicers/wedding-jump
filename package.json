{
  "name": "wedding-jump",
  "version": "2.0.0",
  "description": "Real-time multiplayer trivia game for weddings",
  "private": true,
  "type": "module",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "npm run dev --workspace=client",
    "dev:server": "npm run dev --workspace=server",
    "build": "npm run build --workspace=client",
    "start": "npm run start --workspace=server",
    "start:all": "concurrently \"npm run start:client\" \"npm run start:server\"",
    "start:client": "npm run preview --workspace=client",
    "start:server": "npm run start --workspace=server",
    "test": "npm run test:client && npm run test:server",
    "test:client": "npm run test --workspace=client",
    "test:server": "npm run test --workspace=server",
    "test:e2e": "npm run test:e2e --workspace=client"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
